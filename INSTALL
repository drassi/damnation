# stuff for python
sudo apt-get install -y python-virtualenv gcc python-dev git
virtualenv dam --no-site-packages
cd dam
source bin/activate
git clone <your-clone-url>
cd damnation
python setup.py develop
pip install simplejson
initialize_media_db development.ini

# stuff for video/audio/photo manipulation and such
sudo apt-get install -y ffmpeg libavcodec-extra-53 flvtool2 imagemagick gifsicle

# stuff for webserver
sudo apt-get install -y nginx-extras

# stuff for resque
sudo apt-get install -y redis-server ruby rubygems ruby-dev sqlite3 libsqlite3-dev
sudo gem install rubygems-update
sudo update_rubygems
sudo gem install SystemTimer json rake resque god sqlite3 open4
resque-web

# stuff for youtube
sudo apt-get install libcurl4-gnutls-dev librtmp-dev subversion
pip install pycurl
pip install gdata
cd ..
svn checkout http://youtube-upload.googlecode.com/svn/trunk/ youtube-upload
cd youtube-upload
python setup.py install
